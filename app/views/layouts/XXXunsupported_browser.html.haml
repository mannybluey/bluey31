!!! Strict
%html(xmlns="http://www.w3.org/1999/xhtml")
	%head
		%meta(content="text/html; charset=utf-8" http-equiv="Content-Type")
		%title Bluey Health & Fitness
		%link{:rel => 'shortcut icon', :href=>"/favicon.ico"}
		= yield :head
		= stylesheet_link_tag "unsupported_browser", :media => :all
		
	%body
		#unsupported_page
			#unsupported_content
				%h1 Unsupported Web Browser!
			#unsupported_content
				%p The Bluey Health & Fitness site should run well on the latest versions of the following web browsers:
				
				%ul#browser_list
					%li
						.icon
							%a{:href=>"http://www.google.com/chrome", :title=>"Download Chrome 10"}
								%img{:src=>"/assets/browsers/browser_chrome.png"}
						.link
							%p
								Chrome
								%br
								9,10

					%li
						.icon
							%a{:href=>"http://firefox.com", :title=>"Download Firefox 6"}
								%img{:src=>"/assets/browsers/browser_firefox.png"}
						.link
							%p
								Firefox
								%br
								5, 6

					%li
						.icon
							%a{:href=>"http://apple.com/safari/download", :title=>"Download Safari 5"}
								%img{:src=>"/assets/browsers/browser_safari.png"}
						.link
							%p
								Safari
								%br
								4, 5

					%li
						.icon
							%a{:href=>"http://windows.microsoft.com/en-US/internet-explorer/download/ie-9/worldwide", :title=>"Internet Explorer 9"}
								%img{:src=>"/assets/browsers/browser_ie7.png"}
						.link
							%p
								Internet Explorer
								%br
								9

				%p.clear
					%span You are welcome to continue using your current web browser,
					%br
					%span but you may experience display issues or other difficulties.				

				= form_tag continue_path do
					.buttons
						= image_submit_tag("/assets/buttons/continue_anyway.gif", :class => 'submit_button')
						= check_box_tag :show_unsupported_browser_notice_message, 'yes', false
