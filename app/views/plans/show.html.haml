= render  "plans_menu"

- content_for :bottom_content_bar do
	#bottom_content_bar.plans
		#filter_bar
			= render "filter_bar"
			= render "search_form"

- content_for :bottom_content do
	#plan
		%div.fl= image_tag "#{@plan.plan_type[:image_path]}", :alt => "#{File.basename( @plan.plan_type[:image_path], '.*')}", :style => "align: middle;"
		%div.fl{:style => "margin-left: 20px;"}
			%h1= on_the_spot_edit @plan, :name
			%p#description{:style => "margin: 3px 0 0 5px;"}= on_the_spot_edit @plan, :description, :type => :textarea
			
		%hr.clear
		%p{:style => "margin: 0 0 10px;"}=link_to "Add a day", plan_days_path(@plan), :class => 'add-day-button', :remote => true, :method => :post
		.plan-days
			- if @plan.days.empty?
				%em#no-days No days have been added to this plan yet!
			- else
				= render :partial => "days/day", :collection => @plan.days, :as => :day
