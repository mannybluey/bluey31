- content_for :top_menu do
	%ul
		- PlanType.all.each do |plan_type|
			%li= link_to image_tag("#{plan_type[:image_path]}", :alt => "#{File.basename( plan_type[:image_path], '.*')}"), plan_type_path(plan_type[:id])

- content_for :bottom_menu do
	= render :partial => "shared/dashboard_menu"

- content_for :bottom_content_bar do
	#bottom_content_bar.plans
		#navBar
			%ul.fl
				= render :partial => "nav_bar"
			= form_for :query , :url => "#", :html => {:id => "searchForm", :class => "fr" } do |f|
				= f.text_field :search_string
				= f.submit "Search"

- content_for :bottom_content do
	#plan
		%div.fl= image_tag "#{@plan.plan_type[:image_path]}", :alt => "#{File.basename( @plan.plan_type[:image_path], '.*')}", :style => "align: middle;"
		%div.fl
			%h1= on_the_spot_edit @plan, :name
			%p#description= on_the_spot_edit @plan, :description, :type => :textarea
		%hr.clear
		.plan-days
			- if @plan.days.empty?
				%em#no-days No days have been added to this plan yet!
			- else
				= render @plan.days
		%p=link_to "Add a day", plan_days_path(@plan), :class => 'button', :remote => true, :method => :post
