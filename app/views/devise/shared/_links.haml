- if controller_name != 'sessions'
	= link_to "Sign in", new_session_path(resource_name),  :title => 'Sign In',  :class => "dialog"
	%br/
- if devise_mapping.registerable? && controller_name != 'registrations'
	= link_to "Sign up", new_registration_path(resource_name),  :title => 'Sign Up',  :class => "dialog"
	%br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
	= link_to "Forgot your password?", new_password_path(resource_name),  :title => 'Forgot your password',  :class => "dialog"
	%br/
- if devise_mapping.confirmable? && controller_name != 'confirmations' && controller_name != 'registrations'
	= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name),  :title => 'Confirmation Instructions',  :class => "dialog"
	%br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' && controller_name != 'registrations'
	= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name),  :title => 'Unlock Instructions',  :class => "dialog"
	%br/
