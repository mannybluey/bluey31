= div_for day_exercise do
	.day_header
		%h3
			%span Day #{@day_count || day_exercise_counter + 1}
			%span=link_to (image_tag 'delete.png', :style => "margin-top: -4px;"), plan_day_path(day_exercise.plan, day_exercise), :method => :delete
	%section{:style => "width: 920px; margin-left: 5px;"}
		%ul.day-items
			= render day_exercise.plan_items
		%p= link_to "Add #{day_exercise.plan.plan_type[:name].capitalize}", new_plan_day_plan_item_path(day_exercise.plan, day_exercise), :class => 'add-plan-item button', :remote => true
