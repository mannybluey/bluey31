.user-image
  = link_to image_tag(user_image.picture.url, :class => 'large-picture'), user_image.picture.url(:original)
  %p= truncate user_image.name, :length => 15
  = link_to 'Delete', user_image_path(user_image), :method => :delete, :class => 'delete-image'
  = link_to 'Use for profile', update_profile_picture_user_image_path(user_image), :class => 'use-for-profile'
