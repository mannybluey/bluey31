<%- item_selector = "#plan_item_#{@plan_item.id}" %>
$('<%= item_selector %>').append('<%= escape_javascript render(:partial => 'form', :locals => {:edit_form => true}) %>');

// Cancel link
$('<%= item_selector %> #cancel-edit-exercise').click(function(event) {
  $(this).closest('form').remove();
  event.preventDefault();
});
