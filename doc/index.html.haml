- content_for :main_content do
	#containerWrapper
		#container
			#topBar
				#leftTopBar.fl
					= render :partial => "shared/left_top_bar"

				#rightTopBar.fr
					#topMenu
						%ul
							%li= link_to image_tag("dashboard/weightButton.jpg", :alt => "weightButton"), plan_type_path(1)
							%li= link_to image_tag("dashboard/appleButton.jpg", :alt => "appleButton"), plan_type_path(2)
							%li= link_to image_tag("dashboard/pillsButton.jpg", :alt => "pillsButton"), plan_type_path(3)
							%li= link_to image_tag("dashboard/heartButton.jpg", :alt => "heartButton"), plan_type_path(4)

						#powerButton.fr
							%p= link_to image_tag("dashboard/powerButton.png", :alt => "powerButton"), destroy_user_session_path

					#bottomMenu
						= render :partial => "/shared/dashboard_menu"

			#navBar
				%ul.fl
					= render :partial => "navBar"
				= form_for :query , :url => "#", :html => {:id => "searchForm", :class => "fr" } do |f|
					= f.text_field :search_string
					= f.submit "Search"
				
			#contentWrapper{:style => "position:relative;"}
				%h2= plan_list_title(@plan_type)
				#contentBar
					%ul.fl
						%li
							= link_to "+ Add Plan", "#fancy_new_plan_form" , :id => "new_plan_link"
							= render :partial => "new_plan"
					#addPlanText.fl
						%p
							%b Available plans are listed below
						%p.small To add new plan click the link on the left

				- if display_paginationBar(@plans)
					#paginationBar.clear
						= render :partial => "/plans/pagination_nav"

				#plan_content.clear{:style => "z-index: 0;"}
					- unless @plans.count > 0
						= render :partial => "no_plan"
					- else
						%ul
							= render :partial => "plan", :collection => @plans

		%span{:style => "display:none;"}= link_to "Edit plan" , "#fancy_edit_plan" , :id => "edit_plan_link"		
		#edit_plan{:style =>"display:none;" }
			#fancy_edit_plan{:style => "font-size: 1.5em; width: 600px;"}
